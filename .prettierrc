{
  "plugins": ["@shufo/prettier-plugin-blade"],
  "overrides": [
    {
      "files": ["*.blade.php"],
      "options": {
        "parser": "blade",
        "tabWidth": 4,
        "wrapAttributes": "auto",
        "wrapAttributesMinAttrs": 3,
        "endWithNewline": true,
        "useTabs": false,
        "sortTailwindcssClasses": true
      }
    }
  ],
  "printWidth": 120,
  "tabWidth": 4,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5"
}